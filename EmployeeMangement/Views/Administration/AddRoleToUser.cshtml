@model List<AddUserToRoleViewModel>;
@{ 
    ViewBag.Title = "Add Role tomuser";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <form method="post">
                <div class="card-header"><h3>Roles</h3></div>

                <div class="card-body">
                    @{
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check-input m-auto">
                                <input asp-for="@Model[i].IsSelected" />
                                <label asp-for=@Model[i].IsSelected>@Model[i].RoleName</label>
                            </div>
                            <br />
                            <input type="hidden" asp-for=@Model[i].UserId />
                            <input type="hidden" asp-for=@Model[i].RoleId />
                            <input type="hidden" asp-for=@Model[i].RoleName />


                        }
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-secondary"> update roles in user</button>
                </div>
            </form>
        </div>
    </div>
</div>